<section class="container">
  <div class="row">
    <div class="col-12">
      <table class="table">
        <thead>
          <tr>
            <th>Date</th>
            <th>Order No.</th>
            <th>Price</th>
            <th>State</th>
            <th>Function</th>
          </tr>
        </thead>
        <tbody>
          <% @orders.each do |order| %>
            <tr>
              <td><%= order.created_at %></td>
              <td><%= order.num %></td>
              <td><%= order.total_price %></td>
              <td><%= order.state %></td>
              <td>
                <%= link_to "Pay", "#", class: "btn btn-success btn-sm" if order.may_pay? %>
                <%= link_to "Cancel", cancel_order_path(order), method: :delete, data: { confirm: "Are you sure?\nWe will refund, if the payment completed."},
                                      class: "btn btn-danger btn-sm" if order.may_cancel? %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</section>