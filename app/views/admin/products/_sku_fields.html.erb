<div class="row mb-3 nested-fields" data-new-record="<%= form.object.new_record? %>">
  <div class="col-8">
    <%= form.text_field :spec, placeholder: "Spec", class: "form-control" %>
  </div>
  <div class="col-3">
    <%= form.number_field :quantity, placeholder: "Quantity", class: "form-control" %>
  </div>
  <div class="col-1">
    <%= link_to "Delete", '#', class: "btn btn-danger",
                               data: { action: "product-form#removeSku" } %>
  </div>
  <%= form.hidden_field :_destroy %>
</div>

