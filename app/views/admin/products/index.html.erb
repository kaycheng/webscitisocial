<h1>GetBuy DashBoard</h1>
<%= link_to "Create New Product", new_admin_product_path, class: "btn btn-info" %>

<% @products.each do |product| %>
  <%= product.name %>
  <%= product.vendor.title %>
  <%= product.list_price %>
  <%= product.sell_price %>
  <%= product.on_sell %>
  <%= link_to "edit", edit_admin_product_path(product), class: "btn btn-info" %>
  <%= link_to "Delete", admin_product_path(product), method: :delete,
                        data: { confirm: "Are you sure?" }, class: "btn btn-danger" %>
<% end %>